<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="id_number">
        <item name="android:textSize">@dimen/text_size_id_number</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/id_text_color</item>
    </style>

    <style name="name_university">
        <item name="android:textSize">@dimen/text_size_name_university</item>
        <item name="android:textColor">@color/label_text_color</item>
    </style>

    <style name="label_student_id">
        <item name="android:textSize">@dimen/text_size_label_student_id</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/header_text_color</item>
    </style>

    <style name="student_id_number">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_student_id</item>
        <item name="android:textColor">@color/data_text_color</item>
    </style>

    <style name="label_data">
        <item name="android:textSize">@dimen/text_size_label_data</item>
        <item name="android:textColor">@color/label_text_color</item>
    </style>

    <style name="data">
        <item name="android:textSize">@dimen/text_size_data</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/data_text_color</item>
    </style>
</resources>